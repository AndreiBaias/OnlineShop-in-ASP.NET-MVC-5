@model Proiect_Tudose_Baias.Models.Review
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action="/Reviews/Edit/@Model.ReviewId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.LabelFor(x => x.ReviewRating, "Rating review")
    @Html.TextBoxFor(x => x.ReviewRating, null, new { @class = "form-control" })
    @Html.LabelFor(x => x.ReviewText, "Continut review")
    <br />
    @Html.EditorFor(x => x.ReviewText)
    <br /><br />
    <button type="submit">Modifica acest review</button>
</form>