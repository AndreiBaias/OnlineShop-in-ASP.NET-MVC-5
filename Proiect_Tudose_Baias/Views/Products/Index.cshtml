@model IEnumerable<Proiect_Tudose_Baias.Models.Product>
@using Proiect_Tudose_Baias.Models
@{
    ViewBag.Title = "Index";
}

<h2>Produsele noastre</h2>

<div class="container px-4">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3 border bg-light">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    @Html.TextBox("searching") //, null, new { @class = "form-control mr-sm-2" })
                    <input class="btn btn-outline-success" type="submit"
                           name="submit"
                           value="Cauta" />
                    <select class="selectpicker" name="sort">
                        <option> - </option>
                        <option value="Crescator">Crescator</option>
                        <option value="Descrescator">Descrescator</option>
                    </select>

                    <input class="btn btn-outline-success" type="submit"
                           name="submit"
                           value="Sorteaza" />

                }

            </div>
        </div>
        <div class="col">
            <div class="p-3 border bg-light">

            </div>
        </div>
    </div>
</div>



@*<h3>@ViewBag.Messagge</h3>*@
<hr />

<a class="btn btn-default" href="/Requests/New">Adauga o cerere pentru un produs nou</a>
<hr />

<div class="row">

    @foreach (Product product in ViewBag.Products)
    {
        <div class="col-md-7 card" style="width: 18rem;">
            <img class="card-img-top" src="" alt="Imagine @product.ProductTitle">
            <div class="card-body">
                <h5 class="card-title"> <a href="/Products/Show/@product.RequestId">@product.ProductTitle</a></h5>
                <p class="card-text">@product.ProductDescription</p>

                <form method="post" action="/Orders/New">
                    @Html.Hidden("RequestId", product.RequestId)
                    <button type="submit">Adauga in cos</button>
                  
                </form>

            </div>
        </div>
    }
</div>

